<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OGLightBlue"
    tools:context="tv.ourglass.alyssa.absinthe_android.EnterNameActivity">

    <TextView
        android:text="@string/enterNameTitle"
        android:textColor="@color/OGWhite"
        android:background="@color/OGBackgroundGrey"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:id="@+id/backButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="206dp"
            android:text="Back" />

        <TextView
            android:text="@string/firstNameCaps"
            android:textSize="15sp"
            android:textColor="@color/OGWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/firstNameLabel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:backgroundTint="@color/OGWhite"
            android:ems="10"
            android:layout_below="@+id/firstNameLabel"
            android:layout_alignStart="@+id/firstNameLabel"
            android:layout_marginTop="12dp"
            android:id="@+id/firstName" />

        <TextView
            android:text="@string/lastNameCaps"
            android:textSize="15sp"
            android:textColor="@color/OGWhite"
            android:layout_below="@id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/lastNameLabel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:backgroundTint="@color/OGWhite"
            android:ems="10"
            android:layout_below="@+id/lastNameLabel"
            android:layout_alignStart="@+id/lastNameLabel"
            android:layout_marginTop="12dp"
            android:id="@+id/lastName" />

        <Button
            android:text="Next"
            android:onClick="next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:id="@+id/button2"
            android:layout_alignBaseline="@+id/backButton"
            android:layout_alignBottom="@+id/backButton"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>

